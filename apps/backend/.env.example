# Database
# Connection pooling parameters to prevent "too many clients" errors
# connection_limit: Max connections in pool (adjust based on load, recommended: 10-20)
# pool_timeout: Time to wait for available connection in seconds (recommended: 20)
DATABASE_URL="postgresql://ipl_user:ipl_pass@localhost:5432/ipl_auction?schema=public&connection_limit=10&pool_timeout=20"

# Redis
REDIS_HOST="localhost"
REDIS_PORT=6379

# Server
NODE_ENV="development"
PORT=4000
CORS_ORIGIN="http://localhost:3000"

# Session
SESSION_SECRET="change-this-in-production"

# WebSocket
WS_PING_INTERVAL=25000
WS_PING_TIMEOUT=20000
